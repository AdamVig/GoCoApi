{
  "name": "goco-api",
  "version": "1.0.0",
  "description": "API server for the GoCo Student app.",
  "main": "index.js",
  "dependencies": {
    "browser-agents": "0.1.0",
    "cheerio": "0.19.0",
    "forecast.io-bluebird": "0.0.1",
    "moment": "2.11.1",
    "nano": "6.2.0",
    "pm2": "1.1.3",
    "request-promise": "2.0.0",
    "restify": "4.1.0"
  },
  "devDependencies": {
    "mocha": "2.4.5",
    "request-debug": "0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamvig/gocoapi.git"
  },
  "author": "Adam Vigneaux",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/adamvig/gocoapi/issues"
  },
  "homepage": "https://github.com/adamvig/gocoapi#readme",
  "scripts": {
    "pretest": "npm start",
    "test": "mocha || true  # Run posttest even when test fails",
